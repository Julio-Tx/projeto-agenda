<%- include('includes/head'); %>
<%- include('includes/nav'); %>

  <div class="container">
    <div class="row">

      <div class="col-lg-2"></div>
      <div class="col-lg my-4">
        <h1 class="text-center">Login</h1>
        <p class="text-center lead">Faça seu login ou cadastre-se</p>
        <%- include('includes/messages'); %>
        <div class="row">
          <div class="col-lg">
            <h4>Faça seu cadastro</h4>
            <p>Se você ainda não tem conta, preencha seus dados abaixo:</p>
            <form action="/login/register" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-primary">Registrar</button>
            </form>
          </div>

          <div class="col-lg">
            <h4>Entre na sua conta</h4>
            <p>Se você ja tem uma conta, preencha seus dados abaixo:</p>
            <form action="/login/login" method="POST">
              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
              <div class="form-group">
                <label>Email address</label>
                <input type="email" class="form-control" name="email" placeholder="Enter email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password">
              </div>
              <button type="submit" class="btn btn-primary">Logar</button>
            </form>
          </div>
        </div>
      </div>
      <div class="col-lg-2"></div>
    </div>
  </div>

<%- include('includes/footer'); %>